  <div class="post text">
    <div class="">
      <div class="date">
        <a href="#"><%= post.created_at_fmt %></a>
      </div> <!-- .date -->
      <div class="tweet share-link clearfix">
        <!-- TODO: set domain -->
        <a href="http://b.hatena.ne.jp/entry/www.kyamada.com/posts/<%= post.sub_id %>"
           class="hatena-bookmark-button"
           data-hatena-bookmark-title="<%= post.title %>"
           data-hatena-bookmark-layout="standard-balloon"
           data-hatena-bookmark-lang="en"
           title="このエントリーをはてなブックマークに追加">
          <img src="http://b.st-hatena.com/images/entry-button/button-only@2x.png" alt="このエントリーをはてなブックマークに追加" width="20" height="20" style="border: none;" /></a>

        <a href="https://twitter.com/share"
          class="twitter-share-button"
          data-url="http://www.kyamada.com/posts/<%= post.sub_id %>"
          data-text="<%= post.title %>"
          data-via="" <!--TODO: set twitter user id -->
          >Tweet</a>
      </div>
    </div> <!-- .span3 -->

    <div class="entry">
      <div class="title">
        <h2><a href="/posts/<%= post.sub_id %>"><%= post.title %></a></h2>
      </div> <!-- .title -->

      <div class="tags">
        <% post.tags_array.each do |tag| %>
          <a href='/posts/tag/<%= tag %>'><i class="fa fa-tag"></i> <%= tag %></a>
        <% end %>
      </div>

      <% if current_user %>
        <div style="text-align:right">
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>

      <div class="POST">
        <%= post.body_html(@keywords).html_safe %>
      </div>
    </div> <!-- .entry -->
  </div> <!-- .row .post -->
